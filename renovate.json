{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommitTypeAll(chore)"
  ],
  "timezone": "UTC",
  "schedule": ["before 3am on Monday"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "postUpdateOptions": ["pnpmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },
  "packageRules": [
    {
      "description": "Automatically merge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Automatically merge minor updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "description": "Group Biome-related packages",
      "matchPackagePatterns": ["^@biomejs/"],
      "groupName": "biome packages"
    },
    {
      "description": "Group TypeScript-related packages",
      "matchPackagePatterns": ["typescript", "^@types/"],
      "groupName": "typescript packages"
    },
    {
      "description": "Group documentation packages",
      "matchPackagePatterns": ["typedoc"],
      "groupName": "documentation packages"
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Pin Node.js version",
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "prConcurrentLimit": 10,
  "prCreation": "immediate",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "commitBodyTable": true,
  "reviewersFromCodeOwners": true
}
