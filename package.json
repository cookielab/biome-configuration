{
	"name": "@cookielab.io/biome-config",
	"version": "1.0.0",
	"description": "Biome rulesets for various project types.",
	"files": [
		"dist"
	],
	"exports": {
		"./base": "./dist/base.json",
		"./frontend": "./dist/frontend.json",
		"./react": "./dist/react.json",
		"./next": "./dist/next.json",
		"./node": "./dist/node.json",
		"./graphql": "./dist/graphql.json"
	},
	"main": "./dist/base.json",
	"keywords": [
		"biome",
		"biome-config"
	],
	"packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
	"type": "module",
	"repository": {
		"url": "https://github.com/cookielab/biome-configuration"
	},
	"scripts": {
		"build": "tsx script/build --target ./dist",
		"generate": "tsx script/generateSchema --source ./node_modules/@biomejs/biome/configuration_schema.json --target ./src/generated/configuration.ts",
		"doc": "typedoc",
		"lint": "biome check",
		"format": "biome format --write",
		"types": "tsc"
	},
	"peerDependencies": {
		"@biomejs/biome": ">=2.2.7"
	},
	"devDependencies": {
		"@types/node": "24.9.1",
		"json-schema-to-typescript": "15.0.4",
		"ts-to-zod": "5.0.1",
		"tsx": "4.20.6",
		"typedoc": "0.28.14",
		"typedoc-plugin-markdown": "4.9.0",
		"typescript": "5.9.3",
		"zod": "4.1.12"
	}
}
