{
	"name": "@cookielab.io/biome-config",
	"version": "0.8.1",
	"description": "Biome rulesets for various project types.",
	"files": [
	  "dist"
	],
	"exports": {
		"./base": "./dist/base.json",
		"./frontend": "./dist/frontend.json",
		"./react": "./dist/react.json",
		"./next": "./dist/next.json",
		"./node": "./dist/node.json",
		"./graphql": "./dist/graphql.json"
	},
	"main": "./dist/base.json",
	"keywords": ["biome", "biome-config"],
	"packageManager": "pnpm@10.14.0",
	"type": "module",
	"scripts": {
		"build": "tsx script/build --target ./dist",
		"generate": "tsx script/generateSchema --source ./node_modules/@biomejs/biome/configuration_schema.json --target ./src/generated/configuration.ts",
		"doc": "typedoc",
		"lint": "biome check",
		"format": "biome format --write",
		"types": "tsc"
	},
	"peerDependencies": {
		"@biomejs/biome": ">=2.2.0"
	},
	"devDependencies": {
		"@types/node": "24.3.0",
		"json-schema-to-typescript": "15.0.4",
		"ts-to-zod": "3.15.0",
		"tsx": "4.20.4",
		"typedoc": "0.28.10",
		"typedoc-plugin-markdown": "4.8.1",
		"typescript": "5.9.2",
		"zod": "4.0.17"
	}
}
