{
	"name": "@cookielab.io/biome-config",
	"version": "0.9.0",
	"description": "Biome rulesets for various project types.",
	"files": [
		"dist"
	],
	"exports": {
		"./base": "./dist/base.json",
		"./frontend": "./dist/frontend.json",
		"./react": "./dist/react.json",
		"./next": "./dist/next.json",
		"./node": "./dist/node.json",
		"./graphql": "./dist/graphql.json"
	},
	"main": "./dist/base.json",
	"keywords": [
		"biome",
		"biome-config"
	],
	"packageManager": "pnpm@10.15.1",
	"type": "module",
	"repository": {
		"url": "https://github.com/cookielab/biome-configuration"
	},
	"scripts": {
		"build": "tsx script/build --target ./dist",
		"generate": "tsx script/generateSchema --source ./node_modules/@biomejs/biome/configuration_schema.json --target ./src/generated/configuration.ts",
		"doc": "typedoc",
		"lint": "biome check",
		"format": "biome format --write",
		"types": "tsc"
	},
	"peerDependencies": {
		"@biomejs/biome": ">=2.2.3"
	},
	"devDependencies": {
		"@types/node": "24.3.1",
		"json-schema-to-typescript": "15.0.4",
		"ts-to-zod": "3.15.0",
		"tsx": "4.20.5",
		"typedoc": "0.28.12",
		"typedoc-plugin-markdown": "4.8.1",
		"typescript": "5.9.2",
		"zod": "4.1.5"
	}
}
