{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"useSortedAttributes": "on",
				"useSortedKeys": "on"
			}
		}
	},
	"extends": ["./dist/node.json"],
	"files": {
		"includes": ["src/**/*.ts", "scripts/**/*.ts", "!**/generated"]
	},
	"linter": {
		"rules": {
			"nursery": {
				"noUnresolvedImports": "off"
			}
		}
	}
}
